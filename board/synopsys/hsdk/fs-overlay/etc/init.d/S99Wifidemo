#/bin/sh

case "$1" in
  start)
    echo "Demonstrate wifi connection..."
    ifconfig wlan0 up
    wpa_supplicant -B -i wlan0 -c /etc/wpa_supplicant.conf
    udhcpc -i wlan0
    ping 8.8.8.8
    ;;
  stop)
    echo -n "..."
    ;;
  restart|reload)
    "$0" stop
    "$0" start
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart}"
    exit 1
esac

exit $?
