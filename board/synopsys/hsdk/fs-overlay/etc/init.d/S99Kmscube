#/bin/sh

case "$1" in
  start)
    echo "Starting kmscube..."
    MESA_LOADER_DRIVER_OVERRIDE=imx-drm /usr/bin/kmscube --device /dev/dri/card1
    ;;
  stop)
    echo -n "Stopping Doom..."
    ;;
  restart|reload)
    "$0" stop
    "$0" start
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart}"
    exit 1
esac

exit $?
